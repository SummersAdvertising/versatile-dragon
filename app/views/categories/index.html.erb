<h1>Listing categories</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.title %></td>
    <td><%= category.content %></td>
    <td><%= category.status %></td>
    <td><%= link_to 'Show', category_path(category, :locale => I18n.locale) %></td>
    <td><%= link_to 'Edit', edit_category_path(category, :locale => I18n.locale) %></td>
    <td><%= link_to 'Destroy', category_path(category, :locale => I18n.locale), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Category', new_category_path( :locale => I18n.locale ) %>
