<article>
  <section>
    <div id="banner_series"></div>
    <div id="main">
      <div id="side">
        <ul>
          <%= display_productclasses(@subclass.productclass, @productclasses).html_safe %>
        </ul>
      </div>

      <div id="content">
        <div class="bread"><%= "首頁 ＞ 產品介紹 ＞ #{@subclass.productclass.name} ＞ #{@subclass.name}" %></div>

        <% @subclass.products.each do |product| %>
        <%= link_to(product.name, productclass_subclass_product_path(params[:productclass_id], @subclass, product, :locale => I18n.locale)) %>
        <% end %>

      </div>
    </div>
  </section>
</article>

<script type="text/javascript">
$(document).ready(function() {
  editor.output($("#productclass_content").val());

  $("#articleContent div").each(function(){
    $("#articleContent").append($(this).html());
    $(this).remove();
  });
});

</script>