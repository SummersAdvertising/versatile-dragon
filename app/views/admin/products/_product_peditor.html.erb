<section class="text text-show">
	<div class="one">
		<table width="100%" border="0" cellspacing="0" cellpadding="0">
			<tr>
				<th valign="top">
					<% case content_column %>				
					<% when "content_intro" %>
					前言				
					<% when "content_size" %>
					尺寸表
					<% when "content_wash" %>
					洗滌方式
					<% when "content_outro" %>
					備註
					<% end %>
				</th>
				<td>
					<%= hidden_field_tag(content_column, @product[content_column]) %>
					<div id="<%= output_container %>" style="float:none;"></div>
					<br>
					<ul>
						<% content_column == "content_wash" && @photos_wash.each do |photo| %>
						<li class="thumb">
							<%= image_tag("/uploads/Productphoto/#{@product.id}/thumb_#{photo.id}-#{photo.name}") %>
							<%= photo.description %>
						</li>
						<% end %>
					</ul>
				</td>
			</tr>
		</table>
	</div>
</section>

<% unless (content_column == "content_wash" && @product.content_wash.blank?) %>
<script type="text/javascript">
editor.output($("#<%= content_column %>").val(), $("#<%= output_container %>"));
</script>
<% end %>