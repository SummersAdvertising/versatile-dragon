<% unless(@product.content_point.blank? && @photos_point.length == 0) %>
<section class="text text-show">
  <div class="one">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <th valign="top">產品特色</th>
        <td>
          <ul>
            <% @product.get_column_content("content_point").each_with_index do |point, index| %>
            <li><%= "#{index+1}. #{point}" %></li>
            <% end %>
          </ul>
          <br>
          <ul>
            <% @photos_point.each do |photo| %>
            <li class="thumb">
              <%= image_tag("/uploads/Productphoto/#{@product.id}/thumb_#{photo.id}-#{photo.name}") %>
              <%= photo.description %>
            </li>
            <% end %>
          </ul>
        </td>
      </tr>
    </table>
  </div>
</section>
<% end %>