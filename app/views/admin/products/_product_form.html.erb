<% @forms = @product.get_column_content("content_form")[0] %>

<% unless @forms.blank? %>
<section class="text text-show">
	<div class="one">
		<table width="100%" border="0" cellspacing="0" cellpadding="0">
			<tr>
				<th valign="top">產品規格</th>
				<td>
					<ul>
						<% @forms && @forms["items"].each_with_index do |item, index| %>
						<li>
							<span>
								<%= item %>：</span>
							<%= @forms['contents'][index] %></li>
						<% end %></ul>
				</td>
			</tr>
		</table>
	</div>
</section>
<% end %>