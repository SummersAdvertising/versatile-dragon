<style type="text/css">
img { max-width: 200px; }
div.partial { margin: 25px 0 25px 0; }
</style>

<article>
  <section class="hgroup">
    <h2>
      <%= t("product.titleShow") %></h2>
  </section>
  <!--hgroup-->

  <section class="title">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <th>
          <%= @product.addDate.to_s.to_date %></th>
        <td>
          <%= @product.name %></td>
      </tr>
    </table>
  </section>
  <!--title-->

  <section>
    <div class="partial">
      <%= render "product_info", locals: { product: @product, photos_detail: @photos_detail, photos_color: @photos_color } %>
    </div>

    <div class="partial">
      <%= render "products/product_peditor", content_column: "content_intro", output_container: "peditor-up", locals: { product: @product } %>
    </div>

    <div class="partial">
      <%= render "products/product_point", locals: { product: @product, photos_point: @photos_point } %>
    </div>

    <div class="partial">
      <%= render "products/product_form", locals: { product: @product } %>
    </div>

    <div class="partial">
      <h5><img src="/images/s-18.png"></h5>
      <%= simple_format(@product.content_wrap) %>
    </div>

    <div class="partial">
      <h5><img src="/images/s-19.png"></h5>
      <%= render "products/product_peditor", content_column: "content_size", output_container: "peditor-size", locals: { product: @product } %>
    </div>

    <div class="partial">
      <h5><img src="/images/s-20.png"></h5>
      <%= render "products/product_peditor", content_column: "content_wash", output_container: "peditor-wash", locals: { product: @product } %>
    </div>

    <div class="partial">
      <%= render "products/product_peditor", content_column: "content_outro", output_container: "peditor-down", locals: { product: @product } %>
    </div>
  </section>

  <section class="button">
    <%= link_to (image_tag("/images/back.png")+t("actionshare.back")), "../" %>
  </section>
</article>

<script type="text/javascript">
$(document).ready(function() {
  $("#nav-2").parent().addClass("active");
});
</script>