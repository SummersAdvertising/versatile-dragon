<style>
.tab ul { width: 202px }
</style>
<article>
  <section class="category">
    <ul>
      <li><a href="../edit">產品圖</a></li>
      <li><a href="../edit/intro">產品描述</a></li>
      <li><a href="../edit/point">產品特色</a></li>
      <li><a href="../edit/form">產品規格</a></li>
      <li><a href="../edit/wrap">出貨包裝</a></li>
      <li><a href="../edit/size">尺寸表</a></li>
      <li><a href="../edit/wash">洗滌方式</a></li>
      <li class="active"><a href="javascript:void(0)">其他</a></li>
    </ul>
  </section>
  <!--category-->

  <%= form_for(@product, :url => admin_productclass_subclass_product_path(params[:productclass_id], params[:subclass_id], @product, :locale => I18n.locale), :method => "put") do |f| %>
  <% end #form %>

  <section class="tab">
      <ul>
        <li><a href="#post-p"><img src="/images/edit.png">插入段落</a></li>
        <li><a href="#post-img"><img src="/images/img.png"/>插入圖片</a></li>
      </ul>
    </section>
    <!--tab-->
    <section class="post">
      <div id="post-p">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td width="100"><select name=""><option>內文(細體)</option><option>強調(粗體)</option></select></td>
          </tr>
          <tr>
            <td>&nbsp;</td>
          </tr>
          <tr>
            <td><textarea name="textarea" cols="" rows="" class="autogrow" placeholder="請輸入文字"></textarea></td>
          </tr>
        </table>
      </div>
      <div id="post-img">
        <table width="100%" border="0" cellspacing="0" cellpadding="0">
          <tr>
            <td><input type="file" name="fileField" id="fileField"></td>
          </tr>
        </table>
      </div>
    </section>
    <!--post-->

  <section class="button" id="btnSubmit">
    <a href="javascript:$('#edit_product_<%= @product.id %>').submit();">
      <img src="/images/next.png">
      下一步</a>
    <a href="../edit/wash"><img src="/images/back.png">上一步</a>
  </section>
  <!--button-->
</article>

