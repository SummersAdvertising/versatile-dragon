<div id="main" class="right">
  <div class="button"><%= link_to image_tag("/images/add.png")+'新增輪播', new_admin_indexlink_path(:locale => I18n.locale) %></div>
  <div class="main-list">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr class="main-list-title">
        <th width="9%" align="center" scope="col">編號</th>
        <th width="63%" align="left" scope="col">標題</th>
        <th width="9%" align="center" scope="col">編輯</th>
        <th width="9%" align="center" scope="col">刪除</th>
      </tr>

      <% @indexlinks.each do |indexlink| %>
      <tr>
        <td align="center"><%= indexlink.ordernum %></td>
        <td align="left"><%=link_to(indexlink.title, admin_indexlink_path(indexlink, :locale => I18n.locale)) %></td>
        <td align="center"><%= link_to image_tag("/images/edit.png"), admin_indexlink_path(indexlink, :locale => I18n.locale) %></td>
        <td align="center"><%= link_to image_tag("/images/delete.png"), admin_indexlink_path(indexlink, :locale => I18n.locale), method: :delete, data: { confirm: '確定刪除?' } %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <%= paginate @indexlinks, :theme => 'admin' %>
</div>
<!--main--> 

<script type="text/javascript">
$(document).ready(function(){
  $("#links").addClass("active");
});
</script>
