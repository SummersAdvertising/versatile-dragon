<article>
	<section class="hgroup">
		<h2>產品列表</h2>
		<p><%= "#{@productclass.name} / #{@subclass.name}" %></p>
	</section>
	<!--hgroup-->
	<section class="button">
		<%= link_to( image_tag("/images/page_add.png") + "新增產品", admin_productclass_subclass_products_path(params[:productclass_id], params[:id], :locale =>  I18n.locale), :method => :post ) %>
	</section>
	<!--button-->
	<section class="list">
		<table width="100%" border="0" cellspacing="0" cellpadding="0">
			<tr>
				<th align="left">產品名稱</th>
				<th align="left" class="x0 x1">編輯</th>
				<th align="left" class="x1">刪除</th>
			</tr>

			<% @subclass.products.each do |product| %>
			<tr>
				<td align="left">
					<img src="/images/page.png">
					<%= link_to( product.name, admin_productclass_subclass_product_path(params[:productclass_id], params[:id], product, :locale => I18n.locale) ) %>
				</td>
				<td align="left" class="x0">
					<%= link_to image_tag("/images/edit.png"), edit_admin_productclass_subclass_product_path(params[:productclass_id], params[:id], product, :locale => I18n.locale) %>
				</td>
				<td align="left">
					<%= link_to(image_tag("/images/delete.png"), admin_productclass_subclass_product_path(params[:productclass_id], params[:id], product, :locale => I18n.locale), :method => :delete, :data => {:confirm => "確定刪除產品？"} ) %>
				</td>
			</tr>
			<% end %>
		</table>
	</section>
	<!--list-->
</article>

<script type="text/javascript">
$(document).ready(function() {
  $("#nav-2").parent().addClass("active");
});
</script>