<article>
  <p><%= @productask.created_at.to_date %></p>
  <p>公司名稱：<%= @productask.askercompany %></p>
  <p>國家：<%= @productask.country %></p>
  <p>聯絡人：<%= @productask.askername %></p>
  <p>電話：<%= @productask.askertel %></p>
  <p>EMAIL：<%= @productask.askermail %></p>
  <p>主旨：<%= @productask.subject %></p>
  <p>需求數量：<%= @productask.askamount %></p>
  <p>詢價單狀態：<%= @productask.status %>｜<%= link_to "變更為#{@productask.status == "未處理" ? "已處理" : "未處理" }", changeStatus_admin_productask_path(params[:locale], @productask) %></p>

  <table>
    <tr>
      <th align="center">詢價商品</th>
    </tr>
    <% @productask.productasklists.each do |item| %>
    <tr>
      <td><%= item.productname %></td>
    </tr>
    <% end %>
  </table>

  <p>詢價內容：<%= @productask.purpose || "未填寫" %></p>
  <p>備註：<%= simple_format(@productask.note || "無" ) %></p>
</article>

<script type="text/javascript">
$("#nav-4").parent().addClass("active");
</script>
