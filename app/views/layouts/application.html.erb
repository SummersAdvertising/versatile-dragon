<script type="text/javascript">
$(function(){
  $('#slider').bxSlider({
    pager: true
  });

  //更換語系
  changeLang();

  function changeLang(){
    $("#lang").children("a").each(function(){
    	if($(this).data("lang") == "<%= params[:locale] %>"){
    		$(this).hide();
    	}
    	else{
    		$(this).show();
    	}
    });

    $("#lang a:visible").eq(0).after("/");
  }

  $("#lang a").click(function(){
  	//符合regex時傳回array ["目前網址", "root path(不含語系)", "語系", "子網頁"]
  	var location = window.location.toString().match(/^http\:\/\/(.+)\/(en|zh_TW|zh_CN)(.*)/)[3];
  	window.location = "/"+$(this).data("lang")+location;
  });

});
</script>
