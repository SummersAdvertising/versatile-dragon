<div id="content-2">
	<% @forms = @product.get_column_content("content_form")[0] %>
	<% unless @forms["items"].select{ |content| !content.blank? }.length == 0 %>
	<h5>
		<img src="/images/s-17.png"></h5>
	<ul>
		<% @forms && @forms["items"].each_with_index do |item, index| %>
		<li>
			<span>
				<%= item %>ï¼š</span>
			<%= @forms['contents'][index] %>
		</li>
		<% end %>
		<br>
		<ul>
			<% @photos_form.each do |photo| %>
			<li class="thumb">
              <%= image_tag("/uploads/Productphoto/#{@product.id}/#{photo.id}-#{photo.name}") %>
            </li>
            <% end %>
        </ul>
	</ul>
	<% end %>
</div>